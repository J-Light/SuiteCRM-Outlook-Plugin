<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <!-- General.xml - default ribbon and context menu set -->
  <ribbon>
    <tabs>
      <tab idMso="TabAddIns" label="SuiteCRM">
        <group id="SuiteCRMGroup"
               label="SuiteCRM">
          <button id="btnArchive" getImage="GetImage" label="Archive" size="normal" onAction ="btnArchive_Action"/>
          <button id="btnSettings" getImage="GetImage" label="Settings" size="normal" onAction ="btnSettings_Action"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
  <contextMenus>
    <contextMenu idMso="ContextMenuMailItem">
      <button id="btnArchive1" getImage="GetImage" label="SuiteCRM Archive" onAction="btnArchive_Action" getEnabled="btnArchive_Enabled" />
    </contextMenu>
    <contextMenu idMso="ContextMenuContactItem">
      <button id="manualSyncButton" getImage="GetImage" label="Manual Sync to CRM" onAction="manualSyncButton_Action" getEnabled="manualSyncButton_Enabled"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuMultipleItems">
      <button id="btnArchive2" getImage="GetImage" label="SuiteCRM Archive" onAction="btnArchive_Action"/>
    </contextMenu>
  </contextMenus>
</customUI>



